
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "list_all_lead_custom_fields": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "const": "GET"
        },
        "path": {
          "type": "string",
          "const": "/custom_field/lead/"
        }
      },
      "required": [
        "method",
        "path"
      ]
    },
    "create_lead_custom_field": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "const": "POST"
        },
        "path": {
          "type": "string",
          "const": "/custom_field/lead/"
        }
      },
      "required": [
        "method",
        "path"
      ]
    },
    "fetch_lead_custom_field_details": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "const": "GET"
        },
        "path": {
          "type": "string",
          "pattern": "^/custom_field/lead/\\d+/$"
        }
      },
      "required": [
        "method",
        "path"
      ]
    },
    "update_lead_custom_field": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "const": "PUT"
        },
        "path": {
          "type": "string",
          "pattern": "^/custom_field/lead/\\d+/$"
        }
      },
      "required": [
        "method",
        "path"
      ]
    },
    "delete_lead_custom_field": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "const": "DELETE"
        },
        "path": {
          "type": "string",
          "pattern": "^/custom_field/lead/\\d+/$"
        }
      },
      "required": [
        "method",
        "path"
      ]
    }
  }
}
