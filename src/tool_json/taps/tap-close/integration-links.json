{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Integration Links",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The displayed name of the integration link."
    },
    "url": {
      "type": "string",
      "description": "The URL template for the integration link."
    },
    "type": {
      "type": "string",
      "description": "The type of the integration link.",
      "enum": [
        "lead",
        "contact",
        "opportunity"
      ]
    }
  },
  "required": [
    "name",
    "url",
    "type"
  ]
}